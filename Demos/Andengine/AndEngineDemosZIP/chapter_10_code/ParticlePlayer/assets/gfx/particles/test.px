<ParticleConfig>
	<emitter
		shape="circle"
		center_x="0.0"
		center_y="0.0"
		radius_x="40.0"
		radius_y="40.0"
		>
	</emitter>
	<system
		texture="particle_fire.png"
		min_rate="100"
		max_rate="100"
		max_particles="500">
		<init_accel
			min_x="0.0"
			max_x="0.0"
			min_y="0.0"
			max_y="0.0">
		</init_accel>
		<init_alpha
			min_alpha="0.0"
			max_alpha="0.0">
		</init_alpha>
		<init_color
			min_red="1.0"
			max_red="1.0"
			min_green="0.0"
			max_green="0.0"
			min_blue="0.0"
			max_blue="0.0">
		</init_color>
		<init_gravity
			gravity_on="false">
		</init_gravity>
		<init_rotation
			min_rotation="0.0"
			max_rotation="360.0">
		</init_rotation>
		<init_velocity
			min_velocity_x="-2.0"
			max_velocity_x="2.0"
			min_velocity_y="-2.0"
			max_velocity_y="-2.0">
		</init_velocity>
		<mod_alpha
			from_alpha="0.0"
			to_alpha="1.0"
			from_time="0.0"
			to_time="1.0">
		</mod_alpha>
		<mod_alpha
			from_alpha="1.0"
			to_alpha="0.0"
			from_time="3.0"
			to_time="4.0">
		</mod_alpha>
		<mod_color
			from_red="1.0"
			to_red="1.0"
			from_green="0.0"
			to_green="0.5"
			from_blue="0.0"
			to_blue="0.0"
			from_time="0.0"
			to_time="2.0">
		</mod_color>
		<mod_color
			from_red="1.0"
			to_red="1.0"
			from_green="0.5"
			to_green="1.0"
			from_blue="0.0"
			to_blue="1.0"
			from_time="2.0"
			to_time="4.0">
		</mod_color>
		<mod_expire
			min_lifetime="2.0"
			max_lifetime="4.0">
		</mod_expire>
		<mod_scale
			from_scale_x="1.0"
			to_scale_x="1.0"
			from_scale_y="1.0"
			to_scale_y="1.0"
			from_time="0.0"
			to_time="5.0">
		</mod_scale>
	</system>
</ParticleConfig>
